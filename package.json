{
  "name": "git-commit-reporter",
  "version": "1.0.0",
  "description": "A tool for generating daily and weekly activity reports from git commits.",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest",
    "build": "tsc && npm run copy-templates",
    "copy-templates": "mkdir -p dist/templates && cp src/templates/*.hbs dist/templates/",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test:watch": "jest --watch",
    "config:check": "ts-node -e \"import {config, hasConfig} from './src/config'; console.log('Config status:'); console.log('OpenAI API Key:', hasConfig('openai.apiKey') ? 'Present' : 'Missing'); console.log('Hugging Face Token:', hasConfig('huggingface.token') ? 'Present' : 'Missing'); console.log('GitHub Token:', hasConfig('github.token') ? 'Present' : 'Missing');\"",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext .ts",
    "lint:fix": "ESLINT_USE_FLAT_CONFIG=false eslint . --ext .ts --fix",
    "lint:staged": "ESLINT_USE_FLAT_CONFIG=false eslint --fix --max-warnings=100",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@huggingface/inference": "^4.7.1",
    "@octokit/rest": "^22.0.0",
    "chart.js": "^4.5.0",
    "date-fns": "^2.30.0",
    "dotenv": "^17.2.1",
    "handlebars": "^4.7.8",
    "openai": "^5.13.1",
    "simple-git": "^3.19.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.6.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/git-commit-reporter.git"
  },
  "keywords": [
    "git",
    "report",
    "commits",
    "activity"
  ],
  "author": "Your Name",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,js}": [
      "npm run lint:staged",
      "prettier --write"
    ]
  }
}
