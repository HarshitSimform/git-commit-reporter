{
  "name": "git-commit-reporter",
  "version": "1.0.0",
  "description": "A tool for generating daily and weekly activity reports from git commits.",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest",
    "build": "tsc && npm run copy-templates",
    "copy-templates": "mkdir -p dist/templates && cp src/templates/*.hbs dist/templates/",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "chart.js": "^4.5.0",
    "date-fns": "^2.30.0",
    "handlebars": "^4.7.8",
    "simple-git": "^3.19.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.19.11",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/git-commit-reporter.git"
  },
  "keywords": [
    "git",
    "report",
    "commits",
    "activity"
  ],
  "author": "Your Name",
  "license": "MIT"
}
